extends layout.pug
block content

    p
        a(href="/books/new").button Create a new Book
    include error
    table
        thead
            th Title
            th Author
            th Genre
            th Year
        tbody
            if books
                each book in books
                    tr
                        td
                            a(href=`/books/${book.id}`) #{book.title}
                            //- a(href="`/book/${book.id}`")#{book.title}
                        td #{book.author}
                        td #{book.genre}
                        td #{book.year}